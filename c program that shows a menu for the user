#include <stdio.h>
#include <time.h>
#include <stdlib.h>


int main(void)
{
	int num,//random number
		option;//option the user select

	int i, j, k, m; //loop counters

	do {
		//data validation for the user's option
		do {
			printf("	MENU	\n");
			printf("-------------------\n");
			printf("1. Right Triangle-1\n");
			printf("2. Right Triangle-2\n");
			printf("3. EXIT\n");

			printf("Enter your choice: ");
			scanf("%d", &option);

		} while (option < 1 || option>3);

		do {

			srand(time(0)); //we use srand function to be able to get a random number
							//but we can not use the srand function on its own we also use time function
							//in it to give a start point to the srand function.
							//because time is different every time you run the program, 
							//the random number will be different also

			num = rand() % 10; // time() function returns the time in miliseconds value, but we want to get a random number
							//between 0 and 9. therefore we need get the modulus 10 of the random number generated by using rand() function

		} while (num == 0); //if we get 0 as random number, we cannot make a triangle, so we need to have a number greater than 0

		printf("Random number is %d\n", num);
		//according to the option apropriate triangle will be drawn
		switch (option)
		{
		case 1:
			//draw the right1 triangle
			for (i = 0; i <= num; i++)
			{
				//display one line
				for (j = 0; j <= i; j++)
					printf("%d", j);
				printf("\n");
			}

			break;
		case 2:
			//draw the right2 triangle
			for (i = 1; i <= num; i++)
			{
				for (j = 1; j <= num - i; j++)
					printf(" ");

				for (m = i; m >= 1; m--)
					printf("%d", m);

				printf("\n");

			}

			break;
		
		}
	} while (option != 3);

	return(0);
}
